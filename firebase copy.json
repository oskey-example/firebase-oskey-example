{
  "firestore": {
    "rules": "firestore/firestore.rules",
    "indexes": "firestore/firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "source": "./functions"
  },
  "storage": {
    "rules": "storage/storage.rukes"
  },
  "emulators": {
    "auth": {
      "port": 18001
    },
    "functions": {
      "port": 18003
    },
    "firestore": {
      "port": 18002
    },
    "storage": {
      "port": 18005
    },
    "ui": {
      "enabled": false,
      "port": 18000
    },
    "hub": {
      "port": 18099
    }
  }
}