{
  "firestore": {
    "rules": "firestore/firestore.rules",
    "indexes": "firestore/firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "source": "./functions"
  },
  "storage": {
    "rules": "storage/storage.rules"
  },
  "emulators": {
    "auth": {
      "host": "localhost",
      "port": 19001
    },
    "functions": {
      "host": "localhost",
      "port": 19003
    },
    "firestore": {
      "host": "localhost",
      "port": 19002
    },
    "storage": {
      "host": "localhost",
      "port": 19005
    },
    "ui": {
      "enabled": true,
      "host": "localhost",
      "port": 19000
    },
    "hub": {
      "host": "localhost",
      "port": 19099
    }
  }
}