{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "allowJs": true,
    "checkJs": false
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["node_modules"],
  "typeRoots": ["../node_modules/@types"]
}
